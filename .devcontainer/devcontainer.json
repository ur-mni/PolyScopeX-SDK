{
  "name": "polyscopex-sdk-devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "appPort": [
    "4200:4200"
  ],
  "forwardPorts": [
    4200
  ],
  "onCreateCommand": "sudo chmod 666 /var/run/docker.sock",
  "updateContentCommand": "docker pull universalrobots/ursim_polyscopex:${URSIM_VERSION}",
  "postCreateCommand": "sudo chmod 666 /var/run/docker.sock &(sudo rsync -ac --info=progress2 --exclude 'readme.txt' --exclude 'install.sh' /sdk-polyscopex-${SDK_VERSION}/ ${containerWorkspaceFolder} ) && (rm -f run-simulator && ln -s ${URSIM_PATH}/run-simulator .)",
  "containerEnv": {
    "SHELL": "/bin/bash",
    "DEV_CONTAINER": "true",
    "containerWorkspaceFolder": "${containerWorkspaceFolder}"
  },
  "runArgs": ["--add-host=host.docker.internal:host-gateway",  "--privileged"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ZainChen.json",
        "eriklynd.json-tools",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-xml",
        "ms-python.python",
        "redhat.vscode-yaml",
        "ecmel.vscode-html-css",
        "ms-vscode.vscode-typescript-next",
        "ahern.urscript",
        "Angular.ng-template"
      
      ]
    }
  }
}
